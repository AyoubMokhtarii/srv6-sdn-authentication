[flake8]
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # etherws is not created/mantained by us
    pymerang/etherws.py
    # Auto-generated python files
    pymerang/pymerang_pb2_grpc.py
    pymerang/pymerang_pb2.py
    pymerang/status_codes_pb2_grpc.py
    pymerang/status_codes_pb2.py
    # This contains builds of srv6-sdn-authentication that we don't want to check
    build,
    # This contains builds of srv6-sdn-authentication that we don't want to check
    dist